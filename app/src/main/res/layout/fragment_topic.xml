<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.learn.LevelFragment">

    <RelativeLayout
        android:id="@+id/levelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/topicLevelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English Vocabulary"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
        <RelativeLayout
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/levelDesc"
            android:layout_width="wrap_content"
            android:layout_below="@+id/topicLevelTitle"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/topicLevelImg"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/topicLevelImg"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:id="@+id/topicLevelDesc"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Danh sách từ vựng Beginner[A1] bao gồm 32 bài học được phân loại theo chủ đề, độ khó và cách sử dụng theo CEFR"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/levelRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@+id/levelTitle"
        tools:layout_editor_absoluteX="0dp">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>