<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLevel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/levelImg"
            android:layout_width="70dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/levelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/levelImg"
            android:text="ABC"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/levelDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/levelName"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/levelImg"
            android:layout_marginTop="5dp"
            android:text="Danh sách từ vựng Beginner[A1] bao gồm 32 bài học được phân loại theo chủ đề, độ khó và cách sử dụng theo CEFR"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/levelProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/levelDesc"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/levelImg"
            android:progress="25" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>