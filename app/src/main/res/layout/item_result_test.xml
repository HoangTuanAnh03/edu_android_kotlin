<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="3dp"
    android:paddingVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/resultTitle"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:id="@+id/resultIndex"
            android:text="1. "
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_toEndOf="@+id/resultIndex"
            android:id="@+id/resultTrueAns"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="Đáp án đúng: welcome"
            android:textColor="@color/stepview_mark"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_toEndOf="@+id/resultTrueAns"
            android:id="@+id/resultUserAns"
            android:text="Đáp án của bạn: welcome"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTitle"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:layout_marginTop="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/questionLable"
            android:text="Câu Hỏi: "
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/questionDetail"
            android:layout_toEndOf="@+id/questionLable"
            android:text="Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: Câu Hỏi: "
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/stepview_text_done"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:text="Câu hỏi trắc nghiệm"
                android:textColor="@color/stepview_selected_number">

            </TextView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>